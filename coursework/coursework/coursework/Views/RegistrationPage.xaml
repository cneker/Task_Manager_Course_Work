<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="coursework.Views.RegistrationPage">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackLayout>
                <Label Text="Registration"></Label>
                <StackLayout Orientation="Horizontal">
                    <Label Text="email"></Label>
                    <Entry Placeholder="Text tour email" Text="{Binding Path=CurrentUser.Email}"></Entry>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="password"></Label>
                    <Entry Placeholder="Text tour password" Text="{Binding Path=CurrentUser.Password}"></Entry>
                </StackLayout>
                <Button VerticalOptions="Center" Text="Register" Command="{Binding Path=CreateUserCommand}"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>